<%- include('layouts/header', {email,title}) -%>

<div class="container">
  <h1 class="text-center"><%=type==='add'?'New Service':''%><%=type==='update'?service.title:'' %></h1>
  <form action="<%= type==='add'? '/newservice/':'/updateservice/' %><%= type==='add'? id:''%><%= type==='update'? serviceID:''%>" method="POST">
    <% if (error) { %>
      <div class="alert alert-danger" role="alert">
        <%= error %>
      </div>
    <% } %>
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" value="<%=service.title %>" name="title" required maxlength="50" class="form-control" id="title" placeholder="title">
    </div>
    <div class="form-group d-flex align-items-center">
      <label class="mr-3" for="type">Type</label>
      <div>
        <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="type" id="facebook" value="facebook" <%= service.type == 'facebook'? 'checked':'' %> <%= service.type === undefined && 'checked' %>  >
      <label class="form-check-label" for="facebook">
        facebook
      </label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="type" id="youtube" value="youtube" <%= service.type == 'youtube'? 'checked':'' %>   >
      <label class="form-check-label" for="youtube">
        youtube
      </label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="type" id="twitter" value="twitter"<%= service.type == 'twitter'? 'checked':'' %> >
      <label class="form-check-label" for="twitter">
        twitter
      </label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="type" id="instgram" value="instgram" <%= service.type == 'instgram'? 'checked':'' %>>
      <label class="form-check-label" for="instgram">
        instgram
      </label>
    </div>
      </div>
    </div>
    <div class="form-group">
      <label for="link">Link</label>
      <input type="text" value="<%=service.link %>" name="link" required maxlength="200" class="form-control" id="link" placeholder="link">
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <textarea type="text" value="<%=service.description %>" name="description" maxlength="500" class="form-control" id="description" placeholder="description" rows="3"></textarea>
    </div>


    <button type="submit" class="btn btn-primary"><%= type %></button>
  </form>
</div>


<%include('layouts/footer')%>