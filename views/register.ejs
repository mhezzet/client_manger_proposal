<%- include('layouts/header', {title:type,email:''}); -%>


<form class="container mt-3" method='POST'  action="/<%= type %>">
  <% if (error) { %>
    <div class="alert alert-danger" role="alert">
      <%= error %>
    </div>
  <% } %>
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input type="email" name="email" class="form-control" id="exampleInputEmail1" required aria-describedby="emailHelp" placeholder="Enter email">
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <input type="password" name="password" class="form-control" pattern=".{3,}" title="3 characters minimum" required id="exampleInputPassword1" placeholder="Password">
  </div>
  <button type="submit" class="btn btn-primary"><%= type %></button>
</form>

<% include 'layouts/footer' %>
